<?xml version="1.0" encoding="UTF-8"?>
<docs_index>
  <!-- SCENARIO 1: Perfect match - file exists, metadata matches -->
  <source>
    <title>Perfect Match Document</title>
    <description>This document has matching file, title, and URL</description>
    <source_url>https://example.com/perfect-match</source_url>
    <local_file>perfect-match.md</local_file>
  </source>

  <!-- SCENARIO 2: File exists but title mismatch -->
  <source>
    <title>Wrong Title in INDEX</title>
    <description>The title in INDEX doesn't match the markdown file</description>
    <source_url>https://example.com/title-mismatch</source_url>
    <local_file>title-mismatch.md</local_file>
  </source>

  <!-- SCENARIO 3: File exists but URL mismatch (different path) -->
  <source>
    <title>URL Mismatch Document</title>
    <description>The URL in INDEX differs from markdown</description>
    <source_url>https://example.com/wrong-url</source_url>
    <local_file>url-mismatch.md</local_file>
  </source>

  <!-- SCENARIO 4: File exists but both title and URL mismatch -->
  <source>
    <title>Completely Wrong Metadata</title>
    <description>Both title and URL don't match the markdown</description>
    <source_url>https://example.com/wrong-everything</source_url>
    <local_file>double-mismatch.md</local_file>
  </source>

  <!-- SCENARIO 5: Missing file - referenced in INDEX but doesn't exist -->
  <source>
    <title>Ghost Document</title>
    <description>This file is in INDEX but doesn't exist on disk</description>
    <source_url>https://example.com/ghost-file</source_url>
    <local_file>missing-file.md</local_file>
  </source>

  <!-- SCENARIO 6: Another missing file -->
  <source>
    <title>Another Missing File</title>
    <description>Second file that doesn't exist</description>
    <source_url>https://example.com/another-missing</source_url>
    <local_file>another-missing.md</local_file>
  </source>

  <!-- SCENARIO 7: File exists with fragment mismatch (should be ignored) -->
  <source>
    <title>Fragment Test Document</title>
    <description>URL has different fragment but base URL matches</description>
    <source_url>https://example.com/fragment-test#section-a</source_url>
    <local_file>fragment-test.md</local_file>
  </source>

  <!-- NOTE: Files not in INDEX (orphans):
       - orphan-one.md
       - orphan-two.md
       - orphan-three.md
  -->
</docs_index>
